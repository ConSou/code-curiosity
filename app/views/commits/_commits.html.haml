- @commits.each do |commit|
  %tr
    %td= commit.commit_date.strftime("%d %B %y")
    %td= commit.repository.name
    %td
      = commit.message
      = link_to commit.html_url, class: 'btn btn-info btn-xs' do
        %i.fa.fa-fw.fa-share
        View
    %td= commit.score
    %td
      - if commit.is_reveal
        = commit.reward
      - else
        = link_to reveal_commit_path(commit), method: 'patch',
          class: 'btn btn-success btn-xs reveal', remote: true do
          %i.fa.fa-fw.fa-gift
          Reveal
        .reward
          = commit.reward
