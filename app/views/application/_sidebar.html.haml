%aside.main-sidebar
  %section.sidebar
    %ul.sidebar-menu
      %li{class: is_active('index', 'dashboard')}
        = link_to root_path do
          %i.fa.fa-dashboard
          %span Dashboard
      %li{class: is_active('index', 'activities')}
        = link_to activities_path do
          %i.fa.fa-cubes
          %span Contributions
      = render 'admin_sidebar' if current_user.is_admin?
      = render 'orgs_sidebar' if current_user.organizations.any?
      %li{class: is_active(params[:action], 'commits')}
        =  link_to commits_path do
          %i.fa.fa-gift
          %span Rewards

