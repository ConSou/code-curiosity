.modal-dialog
  .modal-content
    .modal-header
      %button.close{'aria-label' => 'Close', 'data-dismiss' => 'modal', :type => 'button'}
        %span{'aria-hidden' => 'true'} &times;
      %h4.modal-title
        Redeem Points
    .modal-body
      .nav-tabs-custom
        %ul.nav.nav-tabs
          %li.active
            %a{href: '#github_redeem', data: { toggle: 'tab'} }
              %i.fa.fa-github-alt
              Github
          %li
            %a{href: '#amazon_redeem', data: { toggle: 'tab'} }
              %i.fa.fa-amazon
              Amazon
          %li
            %a{href: '#other_redeem', data: { toggle: 'tab'} } Other
        .tab-content
          .tab-pane.active#github_redeem
            = render 'redeem/github'
          .tab-pane#amazon_redeem
            = render 'redeem/amazon'
          .tab-pane#other_redeem
            = render 'redeem/other'
